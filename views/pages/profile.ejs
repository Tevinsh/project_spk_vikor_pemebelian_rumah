<!DOCTYPE html>
<html>
<%- include("../layout/head.ejs") -%>
<body>
  <% if (error) { %>
    <script>
      function error() {
              alert('<%- error %>');
          }
      window.onload = error;
    </script>
  <% } %>

<%- include("../layout/nav.ejs") -%>

<script type="text/javascript">
    $('.datepicker').datepicker();
   </script>

<div class="container my-4">
    <div class="row">
  		<div class="col-sm-3 sticky-top"><!--left col-->
              

      <div class="text-center mb-3">
        <img src="<%- result.imgPath %>" class="avatar img-circle img-thumbnail my-2" alt="avatar">
        <h6>Upload a different photo...</h6>
        <form method="POST" action="/profile/upload" enctype="multipart/form-data">
        <input type="file" class="text-center center-block file-upload my-2" accept='image/*' name="imgupload">
        <input type="submit" value="Ganti gambar">
        </form>
      </div></hr><br>

          
          
          <ul class="list-group">
            <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Shares</strong></span> 125</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> 13</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> 37</li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Followers</strong></span> 78</li>
          </ul>
          
        </div><!--/col-3-->
    	<div class="col-sm-9 my-2">
                  <form class="form" action="/profile/update" method="post" id="registrationForm">

                   <!-- <div class="form-group">
                          
                        <div class="col-xs-6">
                            <label for="email"><h5>Email</h5></label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="contoh@email.com" title="enter your email." value="<%- result.email %>">
                        </div>
                    </div>
-->
                    <div class="form-group">
                      
                          
                      <div class="col-xs-6">
                          <label for="nama"><h5>Nama</h5></label>
                          <input type="text" class="form-control" name="nama" id="nama" placeholder="Nama Anda" title="Nama Anda" value="<%- result.nama %>">
                      </div>
                  </div>
          

                      <div class="form-group">
                          
                        <div class="col-xs-6">
                            <label for="phone"><h5>Nomor Telepon</h5></label>
                            <input type="text" class="form-control" name="telepon" id="telepon" placeholder="masukkan nomor telepon" title="enter your phone number if any." value="<%- result.telepon %>">
                        </div>
                    </div>

                      <div class="form-group">
                          
                        <div class="col-xs-6">
                            <label for="email"><h5>Tanggal Lahir</h5></label>
                            <input type="date" class="form-control" id="tanggal_lahir" name="tanggal_lahir" placeholder="dd/mm/yyyy" title="Tanggal lahir" value="<%- result.tanggal_lahir %>">
                        </div>
                    </div>

                      <div class="form-group">
                          
                          <div class="col-xs-6">
                              <label for="alamat"><h5>Alamat</h5></label>
                              <input type="text" class="form-control" id="alamat" placeholder="nama Tempat" title="masukkan lokasi" name="alamat" value="<%- result.alamat %>">
                          </div>
                      </div>

                      <div class="form-group">
                        <div class="col-xs-6">
                        <label for="exampleFormControlTextarea1">Deskripsi</label>
                        <textarea class="form-control" id="deskripsi" name="deskripsi" rows="10" maxlength="1000"><%- result.deskripsi %></textarea>
                        </div>  
                      </div>
                        
                        <div class="form-group">
                            <div class="d-flex justify-content-end">
                                 <br>
                                   <button class="btn btn-primary btn-success mr-2" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Simpan</button>
                                    <button class="btn btn-primary btn-danger" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                             </div>
                       </div>

                    </form>

                       <hr>

                       <!-- ganti password-->
                       <form class="form" action="/bodychecker" method="post" id="passwordForm">
                       <div class="form-group">
                        <div class="col-xs-6">
                              <h4>Ganti Password</h4>
                              <hr>
                              <label for="password"><h5>Password</h5></label>
                              <input type="password" class="form-control" name="password" id="password" placeholder="password" title="enter your password.">
                          </div>
                      </div>
                      <div class="form-group">
                          
                          <div class="col-xs-6">
                            <label for="password2"><h5>Verify</h5></label>
                              <input type="password" class="form-control" name="password2" id="password2" placeholder="password2" title="enter your password2.">
                          </div>
                      </div>
                      <div class="form-group">
                           <div class="col-xs-12 d-flex justify-content-end">
                                <br>
                              	<button class="btn btn-primary btn-primary" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Ganti</button>
                            </div>
                      </div>

                    </form>
              
            
        </div><!--/col-9-->
    </div><!--/row-->
                                                      
 
<%- include("../layout/footer.ejs") -%>

</body>
</html>


























